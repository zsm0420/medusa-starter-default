{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": ".",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "checkJs": false,
    "strictNullChecks": false
  },
  "include": ["medusa-config.ts"],
  "exclude": [
    "node_modules", 
    "storefront", 
    "**/*.spec.ts", 
    "**/*.test.ts",
    "src/scripts/**"
  ]
}
